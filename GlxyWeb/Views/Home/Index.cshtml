@model List<GlxyWeb.Models.AlarmModel>

<!DOCTYPE html>
<html>
<head>
    <title>Server-Side Pagination with DataTables</title>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap4.min.css">
</head>
<body>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Office</th>
                <th>Age</th>
                <th>Start date</th>
                <th>Salary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var alarm in Model)
            {
                <tr>
                    <td>@alarm.Alarm_name</td>
                    <td>@alarm.Repeat</td>
                    <td>@alarm.Hour</td>
                    <td>@alarm.Message</td>
                    <td style="@(alarm.Active == false ? "color: red;" : "color:blue")">@alarm.Active</td>
                    <td>
                        @if (alarm.Active)
                        {
                            <a style="color:red" href="@Url.Action("Edit", "Home", new { alarm_name = alarm.Alarm_name, status=false })">Passive</a>

                        }
                        else
                        {
                            <a style="color:blue" href="@Url.Action("Edit", "Home", new { alarm_name = alarm.Alarm_name, status=true })">Active</a>

                        }
                    </td>
                    <td>
                        @if (!alarm.Repeat.Equals("Everyday"))
                        {
                            <a href="@Url.Action("Edit", "Home", new { alarm_name = alarm.Alarm_name })">Edit</a>
                        }
                    </td>

                </tr>
            }

        </tbody>
    </table>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
</body>
</html>



